    (function ($) {
        "use strict";
        /*Summernote*/
        if ($('.summernote-description').length) {
            $('.summernote-description').summernote({
                height: 250,
            });
        }/*Summernote*/
        if ($('.summernote-instruction').length) {
            $('.summernote-instruction').summernote({
                height: 250,
            });
        }

    })(jQuery);
</script>
