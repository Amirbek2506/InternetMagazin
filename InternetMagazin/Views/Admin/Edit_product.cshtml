@{
    Layout = null;
    ProductViewModel Product = Model;
}
<div class="modal-header">
    <h5 class="modal-title">Редактирование продукта</h5>
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
</div>
<div class="modal-body">

    <div class="box-body">
        <ul class="nav nav-pills mb-15">
            <li class="nav-item"><a class="nav-link active" data-toggle="pill" href="#main-edit">Основные</a></li>
            <li class="nav-item"><a class="nav-link" data-toggle="pill" href="#description-edit">Описание</a></li>
            <li class="nav-item"><a class="nav-link" data-toggle="pill" href="#galery-edit">Галерея</a></li>
        </ul>
        <div class="tab-content">

            <div class="tab-pane fade active show" id="main-edit">
                <form>
                    <div id="error_edit_product" class="alert alert-danger d-none" role="alert">
                    </div>
                    <div class="row mbn-20">

                        <div class="col-12 mb-10">
                            <label for="formLayoutUsername3">Заголовок *</label>
                            <input type="text" id="title_edit" class="form-control form-control-sm" placeholder="" value="@Product.Title">
                        </div>

                        <div class="col-12 mb-10">
                            <label for="formLayoutPassword3">Артикул *</label>
                            <input type="text" id="articul_edit" class="form-control form-control-sm" placeholder="" value="@Product.Articul">
                        </div>

                        <div class="col-12 mb-10">
                            <label for="formLayoutPassword3">Цена</label>
                            <input type="text" id="price_edit" class="form-control form-control-sm" placeholder="" value="@Product.Price">
                        </div>
                        <div class="col-12 mb-10">
                            <label for="formLayoutPassword3">Цена со скидкой</label><div class="d-flex">
                                <input type="text" id="price_discount_edit" class="form-control form-control-sm" placeholder="" value="@Product.Price_Discount">
                                @if (Product.Is_sale == 1)
                                {
                                    <label class="adomx-checkbox d-flex align-items-center ml-30" style="width: 100%"><input checked id="is_sale_edit" type="checkbox"> <i class="icon"></i> В скидку</label>
                                }
                                else
                                {
                                    <label class="adomx-checkbox d-flex align-items-center ml-30" style="width: 100%"><input id="is_sale_edit" type="checkbox"> <i class="icon"></i> В скидку</label>
                                }
                            </div>
                        </div>
                        <div class="col-12 mb-10">
                            <label for="formLayoutPassword3">Количество на складе</label>
                            <input type="text" id="quontity_edit" class="form-control form-control-sm" placeholder="" value="@Product.Quontity">
                        </div>

                        <div class="col-12 mb-10">
                            @if (Product.Is_new == 1)
                            {
                                <label class="adomx-checkbox"><input checked id="is_new_edit" type="checkbox"> <i class="icon"></i>Новинка</label>
                            }
                            else
                            {
                                <label class="adomx-checkbox"><input id="is_new_edit" type="checkbox"> <i class="icon"></i>Новинка</label>
                            }
                        </div>

                    </div>
                </form>
            </div>


            <div class="tab-pane fade" id="description-edit">
                <form>
                    <div class="row mbn-20">
                        <div class="col-12 mb-20">
                            <label for="formLayoutMessage1">Описание (не обязательно)</label>
                            <textarea id="Description_edit" class="summernote-description-edit form-control form-control-sm">@Product.Description</textarea>
                        </div>
                    </div>
                </form>
            </div>

            <div class="tab-pane fade" id="galery-edit">
                <form>
                    <div class="col-12 mb-20">
                        <label for="formLayoutMessage1">Фото (не обязательно)</label>
                        <span> (размер изображение должет быть  900х1352 пикс. )</span>
                        <div class="d-flex">
                            <input type="file" id="image_to_temp_edit" name="file">
                            <button data-id="@Product.Id" id="upload_temp_edit_btn" class="button button-box-30 button-success"><i class="ti-upload mr-0"></i></button>
                        </div>
                    </div>
                    <div id="images_product_edit" class="row mbn-20">
                        @if (Product.Product_Galeries.Count() > 0)
                        {
                            foreach (Product_GaleryViewModel ImageProduct in Product.Product_Galeries)
                            {
                                <div id="galery_item_@ImageProduct.Id" class="col-3 mb-15">
                                    <img src="/uploads/products/@Product.Id/@ImageProduct.Image" alt="">
                                    <p class="delete-galery text-center widht-100 mt-10 mb-10"><span data-id="@ImageProduct.Id" id="delete_galery_item" class="ti-trash delete-item"></span></p>
                                </div>
                            }
                        }
                    </div>
                </form>
            </div>


        </div>
    </div>
</div>
<div class="modal-footer">
    <button data-id="@Product.Id" id="save_edit_product" class="button button-primary button-my">Сохранить</button>
</div>

<script>

    (function ($) {
        "use strict";

        /*Summernote*/
        if ($('.summernote-description-edit').length) {
            $('.summernote-description-edit').summernote({
                height: 250,
            });
        }/*Summernote*/
        if ($('.summernote-instruction-edit').length) {
            $('.summernote-instruction-edit').summernote({
                height: 250,
            });
        }

    })(jQuery);
</script>
<script src="/public/assets/js/bootstrap-select.js"></script>
<script src="/public/assets/js/plugins/bootstrap-select/bootstrapSelect.active.js"></script>
